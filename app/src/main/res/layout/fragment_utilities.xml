<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00E9FB"
    android:orientation="vertical"
    tools:context=".fragments.UtilitiesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_bmi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_white_round_bar"
            android:drawableTop="@drawable/utility_screen_bmi_calculator_icon"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:text="BMI\nCalculator"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_protein"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_white_round_bar"
            android:drawableTop="@drawable/utility_screen_protein_calculator_icon"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:text="PROTEIN\nCalculator"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_fat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_white_round_bar"
            android:drawableTop="@drawable/utility_screen_body_fat_calculator_icon"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:text="BODY FAT %"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_calories"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_white_round_bar"
            android:drawableTop="@drawable/utility_screen_calories_calculator_icon"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:text="CALORIES\nCalculator"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>