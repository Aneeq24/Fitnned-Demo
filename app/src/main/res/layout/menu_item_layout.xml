<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="200dp"
    android:maxHeight="400dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/main_screen_beginner_image">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:background="@drawable/main_screen_headline_example_image_bar_bg"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingStart="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:fontFamily="@font/roboto_bold"
            android:text="HIIT 30 DAY CHALLENGE"
            android:textColor="?attr/colorBackgroundFloating"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tileId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:fontFamily="@font/roboto_regular"
            android:text="BEGINEER"
            android:textColor="@android:color/background_light"
            android:textSize="12sp" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/main_screen_image_top_play_btn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/home_textViewDaysleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:lineSpacingExtra="8sp"
                android:text="30"
                android:textColor="@android:color/background_light"
                android:textSize="13sp"
                app:fontFamily="@font/roboto_bold" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text=" Days Left"
                android:textColor="@android:color/background_light"
                android:textSize="13sp"
                app:fontFamily="@font/roboto_bold" />

            <TextView
                android:id="@+id/home_textVewPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="40%"
                android:textColor="@android:color/background_light"
                android:textSize="13sp"
                app:fontFamily="@font/roboto_bold" />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="8dp"
            android:alpha="1"
            android:progress="0"
            tools:background="@android:color/darker_gray" />
    </LinearLayout>


</RelativeLayout>